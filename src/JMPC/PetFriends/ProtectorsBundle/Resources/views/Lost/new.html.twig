{# src/JMPC/PetsFriends/ProtectorsBundle/Resources/views/Lost/new.html.twig #}
{# Plantilla que publica un nuevo animal desaparecido en el sitio web #}
{# Acceso: Usuario registrado #}

{% extends 'JMPCPetFriendsProtectorsBundle::base.html.twig' %}

{% block title %}Nuevo amigo desaparecido{% endblock%}

{% block section %}
<div class="grid_8 prefix_1">
    <h2>Nuevo amigo desaparecido</h2><br>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div id="form">
                {{ form (form) }}
            </div>
            <div id="preview_img" title="Vista previa" style="display:none">
                <img id="img_preview" src="{{ asset ('img/avatar.png') }}" />
            </div>
        {% else %} 
            <div class="not_found"></div>
        {% endif %} 
        <div class="button_back">
           <a class="btn02" href="{{ path('jmpc_pet_friends_protectors_lost') }}">Volver</a>
        </div>
</div>
{% endblock %}

{# Renderiza entradas y comentarios recientes en el lateral #}
{% block sidebar %}
        {% render (controller("JMPCPetFriendsProtectorsBundle:Animals:lateral")) %}
        {{ parent() }}
{% endblock %}
