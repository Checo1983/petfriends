{# src/JMPC/PetFriends/ProtectorsBundle/Resources/views/Admin/index.html.twig #}
{# Plantilla del administrador del sitio web #}
{# El administrador puede ver aqui usuarios y realizar gestiones #}

{% extends 'JMPCPetFriendsProtectorsBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
    <link rel="stylesheet" href="{{ asset('css/transdmin.css') }}">
    <script type="text/javascript" src="js/jNice.js"></script>

{% endblock %}
{% block top_block %}{% endblock %}
{% block content %}{% endblock %}
{% block sidebar %}{% endblock %}

{% block section %}
	<h4>Ultimos usuarios registrados</h4>
	<ul>
	{% for user in users %}
		{% if user.username != 'admin' %}
		<li><a href="{{ path('fos_user_profile_show') }}">{{ user.nombre }}</a><br><span><a href="#">Borrar usuario </a></span><span><a href="#"> Escribir Email</a></span></li>
		{% endif %}
	{% endfor %}	
	</ul>
	<a href="{{ path('jmpc_pet_friends_protectors_admin_users') }}">Ver todos los usuarios registrados</a><br>
	<h4>Ultimos mensajes recibidos</h4>
	<ul>
	{% for message in messages %}
		<li>{{ message.id }}</li>
		<li>{{ message.asunto }}</li>
		<li>{{ message.nombre }}</li>
		<li>{{ message.email }}</li>
		<li>{{ message.mensaje }}</li>
	{% endfor %}	
	</ul>
    <a href="{{ path('jmpc_pet_friends_protectors_admin_messages') }}">Ver todos los mensajes de contacto</a><br>
    <h4>Ultimos comentarios recibidos</h4>
	{% for comment in comments %}
		<p>{{ comment.id }}, {{ comment.usuario }}</p>
		<p>{{ comment.comentarios }}</p>
		<p>{{ comment.contenido }}</p>
	{% endfor %}	
{% endblock %}
